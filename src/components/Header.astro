<style type="text/css">

	.nav-touch-box{
		position: fixed;
		top: 0;
		right: 0;
		background-color: #0D0D0D;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: start;
		gap: 9px;
		height: 55px;
		width: 60px;
		padding: 1% 0;
		z-index: 2;
		border-radius: 8% 0 10% 59%;
		transition: 0.5s;
	}

	#menu-icon{
		position: absolute;
	    display: flex;
	    flex-direction: column;
	    gap: 7px;
	    list-style: none;
	    padding: 0;
		animation-name: startHeader;
		animation-duration: 2s;

		}

	.nav-touch-box ul li {
		width: 20px;
		height: 2px;
		background-color: #FCFCFC;
	}

	.nav-touch-open{
		height: 100%;
		width: 100%;
		border-radius: 0;
	}

	.nav-touch-menu {
		display: none;
	    flex-flow: column;
		width: 100%;
	    justify-content: center;
	    align-items: center;
		margin-top: 10%;

	}

	.nav-touch-menu a {
		display: inline-block;
		width: 100%;
		padding: 12% 0;
		text-align: center;
		text-decoration: none;
	}

	.nav-touch-menu a span{
		font-size: 1rem;
		font-weight: bold;
		color: ghostwhite;
	}

	@keyframes startHeader {
		from {filter: brightness(0);}
		to {filter: brightness(0.93);}
			}


/*laptop up*/
	@media (min-width: 1024px) and (orientation: landscape) {


			#menu-icon{
				display: none;
			}

			.nav-touch-box{
				border-radius: 0;
				width: 100%;
				height: 6vh;
				padding: 0;
				display: flex;
				flex-flow: row wrap;
				justify-content: space-around;

			}

			.nav-touch-menu{
				display: flex;
				flex-flow: row wrap;
				position: unset;
				margin-top: 0;
				gap: 5%;
				height: 100%;
				width: 30%;
			}

			.nav-touch-menu a{
/*				display: inline;*/
				padding: 0;
				width: auto;

			}


		
	}
</style>


<script type="text/javascript">
	const navBox = document.querySelector(".nav-touch-box");
	const menuIcon = document.querySelector("#menu-icon"); 
	const navMenu = document.querySelector(".nav-touch-menu");

	// Menu phone View 
	let menuOpen = false;

	menuIcon.addEventListener("touchstart", dropDown);


	function dropDown() {
	console.log(menuOpen);
  	menuOpen = !menuOpen;
		if(menuOpen) {
			console.log("open!");
		navBox.classList.add("nav-touch-open");
		navMenu.style.display = "flex";
		menuIcon.style.marginLeft = '83%';
		// menuOpen = !menuOpen;
		} else {
				console.log("closed!");
				navMenu.style.display = "none";
				navBox.classList.remove("nav-touch-open");
				menuIcon.style.marginLeft = '0';
		}
	}

</script>