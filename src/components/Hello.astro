<script type="text/javascript">
	const navBox = document.querySelector(".nav-touch-box");
	const menuIcon = document.querySelector("#menu-icon"); 
	const navMenu = document.querySelector(".nav-touch-menu");

	// Menu phone View 

	menuIcon.addEventListener("touchstart", dropDown);

	let menuOpen = false;

	function dropDown() {
		navBox.classList.add("nav-touch-open");
		navMenu.style.display = "flex";
		menuIcon.style.marginLeft = '78%';
		const menuWord = document.createElement("span");
		menuWord.innerText = "Menu";
		menuWord.classList.add("menuWord");
		navBox.appendChild(menuWord);

		menuOpen = true;
		// isMenuOpen();
	}

	// function isMenuOpen() {
