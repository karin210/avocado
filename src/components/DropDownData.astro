	}


	.topic:nth-of-type(3){
		background-image: url("https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80");
		background-size: cover;
		background-position: center;
		

	}

	.bigTxt{
		font-size: 1.7rem;
		font-weight: bold;
		text-align: center;
	}

	.weTxtHidden{
		display: block;
		font-size: clamp(0.9rem, 1vw, 1rem);
		padding: 0 clamp(18px, 9%, 12px);
		text-align: center;
		height: 0;
		overflow: hidden;
		transition: 1s;
	}

	.weTxtShow{
		height: 50px;
		background-color: rgba(143,241,101,90%);
		margin: 0 5%;
		padding: 4% 3%;
	}

	.weStoryTxtShow{
		height: 190px;

	}

	article i {
		font-size: 2rem;
		color: #8FF165;
		transition: 1s;
	}

	.arrowUp{
		transform: rotate(0.5turn);
		color: unset;

	}


</style>

<script type="text/javascript">
	const arrowBtns = document.querySelectorAll(".fa-circle-chevron-down");
	const descriptions = document.querySelectorAll(".weTxtHidden");
	const last = document.querySelector(".storyP");
	console.log(descriptions);

	let openTxt = false;
	for(i = 0; i < arrowBtns.length; i++){
		arrowBtns[i].addEventListener("touchstart", function (e) {
			// open text
			if(!openTxt){
				if(e.target === arrowBtns[0]){			descriptions[0].classList.add("weTxtShow");
					arrowBtns[0].classList.add("arrowUp");
				} else if(e.target === arrowBtns[1]){
						descriptions[1].classList.add("weTxtShow");
						arrowBtns[1].classList.add("arrowUp");
					} else if(e.target === arrowBtns[2]) {
						descriptions[2].classList.add("weStoryTxtShow");
						arrowBtns[2].classList.add("arrowUp");
						}
				openTxt = !openTxt;
			}
			 // close text 
			else{
				if(e.target === arrowBtns[0]){				
					descriptions[0].classList.remove("weTxtShow");
					arrowBtns[0].classList.remove("arrowUp");
				} else if(e.target === arrowBtns[1]){
						descriptions[1].classList.remove("weTxtShow");
						arrowBtns[1].classList.remove("arrowUp");
					} else if(e.target === arrowBtns[2]) {
						descriptions[2].classList.remove("weStoryTxtShow");
						arrowBtns[2].classList.remove("arrowUp");
						}
				openTxt = !openTxt;
			}
			
				
			
		})
	}
	


</script>
