<script type="text/javascript">
	const countryh1 = document.querySelectorAll(".country-h1");
	const table = document.querySelectorAll(".sizesTb");
	const country = document.querySelectorAll(".country");


	let usaSizes = false;
	let japSizes = false;
	let canSizes = false;
	let mexSizes = false;


	for(i = 0; i < 4; i++){
		countryh1[i].addEventListener("touchstart", function (e){
			// USA sizes
			if(e.target === countryh1[0] && !usaSizes){
				country[0].classList.add("showTabUSA");
				table[0].classList.add("showSizesTb");
				usaSizes = !usaSizes;
			} else if(e.target === countryh1[0] && usaSizes){
					country[0].classList.remove("showTabUSA");
					table[0].classList.remove("showSizesTb");
					usaSizes = !usaSizes;
				}

				// Japan sizes
			else if(e.target === countryh1[1] && !japSizes){
				country[1].classList.add("showTabJap");
				japSizes = !japSizes;
			} else if(e.target === countryh1[1] && japSizes){
					country[1].classList.remove("showTabJap");
					japSizes = !japSizes;
				}

				// Canada sizes
			else if(e.target === countryh1[2] && !canSizes){
				country[2].classList.add("showTabUSA");
				canSizes = !canSizes;
			} else if(e.target === countryh1[2] && canSizes){
					country[2].classList.remove("showTabUSA");
					canSizes = !canSizes;
				}

				// Mexico sizes
			else if(e.target === countryh1[3] && !mexSizes){
				country[3].classList.add("showTabJap");
				mexSizes = !mexSizes;
			} else if(e.target === countryh1[3] && mexSizes){
					country[3].classList.remove("showTabJap");
					mexSizes = !mexSizes;
				}
		});
	}
	
</script>