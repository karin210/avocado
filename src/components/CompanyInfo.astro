<style type="text/css">

	#brandInfo-box{
		display: flex;
		flex-flow: row wrap;
		justify-content: center;
		gap: 1.5px 0;
	}

	.slogan-box{
		display: flex;
		flex-direction: column;
		width: 100%;
		align-items: center;
		justify-content: center;
		height: 25vh;
	}

	.slogan-box i{
		font-size: 2rem;
		color: rgba(143, 241, 101, 50%);
	}

	.fa-quote-left{
		align-self: start;
		margin-left: 2%
	}

	.fa-quote-right{
		align-self: end;
		margin-right:2%;
	}

	.slogan-txt{
		font-weight: bold;
		font-size: 1.7rem;
		color: #FCFCFC;
		text-align: center;

	}

	.slogan-box::before{
		content: "";
		background-image: url("https://media.istockphoto.com/id/1299023802/photo/avocado-halves-with-trendy-hard-light-and-hard-shadow-on-yellow-background.jpg?b=1&s=170667a&w=0&k=20&c=5PFxm3Ue3zhbkud8Goa4ulzL9gTmD9SMywF3kA3q33g=	");
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		filter: brightness(0.85);
		height: 25vh;
		width: 100%;
		position: absolute;
		left: 0;
		top: 81px;
		z-index: -1;
	}

	.topic{
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		background-color: #f0f0f0;
	}

	.description{
		width: 100%;
		height: 20vh;
	}

	.description::before{
		content: "";
		position: absolute;
		top: 250px;
		right: 0px;
		background-image: url("../../public/vecteezy_avocado-fruit-healthy-food_12629188_575.png");
		background-size: 100%;
		background-repeat: no-repeat;
		width: 136px;
		height: 127px;
	}

	.mission{
		width: 49%;
		height: 16vh;
		margin-right: 1px;
	}

	.vision{
		width: 50%;
		height: 16vh;
	}

	.values{
		width: 100%;
		height: 14vh;
	}

	.story{
		height: 12vh;
	}

	.topic-h{
		color: #0D0D0D;
		align-self: center;
	}

	.description-h{
		font-size: clamp(1.5rem, 2vw, 2rem)
	}

	.weTxtHidden{
		display: block;
		background-color: rgba(143,241,101,90%);
		font-size: clamp(1rem, 1.5vw, 1.3rem);
		margin: 1% 0;
		text-align: center;
		height: 0;
		overflow: hidden;
		transition: 1s;
	}

	.weTxtShow-mission, .weTxtShow-vision{
		padding: 8% 3%;

	}
	.weTxtShow-mission{
		height: 170px;
	}

	.weTxtShow-vision{
		height: 40px;		
	}

	.weTxtShow-story{
		height: 320px;
		padding: 10% 3%;
	}

	.fa-circle-chevron-down{
		display: none;
		font-size: 1.3rem;
		color: black;
		transition: 1s;
	}

	.arrowUp{
		transform: rotate(0.5turn);
		color: unset;

	}


	/*laptop up*/
	@media (min-width: 1024px) and (orientation: landscape) {

		.slogan-box{
			height: 33vh;
		}

		.slogan-box::before{
			height: 33vh;
		}

		.topic{
			height: 50vh;
			width: 50%;
			align-items: start;
			justify-content: center;
		}

		.topic:nth-of-type(2){
			justify-content: center;
		}

		.topic:nth-of-type(3){
			width: 100%;
			height: 22%;
			background-image: none;
			background-color: transparent;
		}

		.topic i{
			display: none;
		}

		.weTxtHidden{
			background-color: rgba(240, 240, 240, 90%);
			height: auto;
			padding: 5% 7%;
			width: 75%;
		}
	}
</style>

<script type="text/javascript">
	const arrowBtns = document.querySelectorAll(".fa-circle-chevron-down");
	const descriptions = document.querySelectorAll(".weTxtHidden");
	const last = document.querySelector(".storyP");

	let openMission = false;
	let openVision = false;
	let openStory = false;

	for(i = 0; i < arrowBtns.length; i++){
		arrowBtns[i].addEventListener("touchstart", function (e) {
			// open mission
			if(!openMission && e.target === arrowBtns[0]){
				descriptions[0].classList.add("weTxtShow-mission");
				arrowBtns[0].classList.add("arrowUp");
				openMission = !openMission;
			}
			 // close mission 
			else if(openMission && e.target === arrowBtns[0]){
				descriptions[0].classList.remove("weTxtShow-mission");
				arrowBtns[0].classList.remove("arrowUp");
				openMission = !openMission;
			}


			// open vision
			else if(!openVision && e.target === arrowBtns[1]){
				descriptions[1].classList.add("weTxtShow-vision");
				arrowBtns[1].classList.add("arrowUp");
				openVision = !openVision;
			}
			 // close vision 
			else if(openVision && e.target === arrowBtns[1]){		descriptions[1].classList.remove("weTxtShow-vision");
				arrowBtns[1].classList.remove("arrowUp");
				openVision = !openVision;
			}

			// open story
			else if(!openStory && e.target === arrowBtns[2]){
				descriptions[2].classList.add("weTxtShow-story");
				arrowBtns[2].classList.add("arrowUp");
				openStory = !openStory;
			}
			 // close story 
			else if(openStory && e.target === arrowBtns[2]){	
				descriptions[2].classList.remove("weTxtShow-story");
				arrowBtns[2].classList.remove("arrowUp");
				openStory = !openStory;
			}
			
		});
	}
	


</script>
