<style type="text/css">

	#brandInfo-box{
		display: flex;
		flex-flow: row wrap;
		justify-content: center;
		gap: 1.5px 0;
	}

	.slogan-box{
		display: flex;
		flex-direction: column;
		width: 100%;
		align-items: center;
		justify-content: center;
		height: 25vh;
	}

	.slogan-box i{
		font-size: 2rem;
		color: #f0f0f0;
	}

	.fa-quote-left{
		align-self: start;
		margin-left: 2%
	}

	.fa-quote-right{
		align-self: end;
		margin-right:2%;
	}

	.slogan-txt{
		font-weight: bold;
		font-size: 1.7rem;
		color: #FCFCFC;
		text-align: center;

	}

	.slogan-box::before{
		content: "";
		background-image: url("https://burst.shopifycdn.com/photos/two-avocado-slices.jpg?width=925&format=pjpg&exif=1&iptc=1");
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		filter: brightness(0.85);
		height: 25vh;
		width: 100%;
		position: absolute;
		left: 0;
		top: 81px;
		z-index: -1;
	}

	.topic{
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		background-color: #f0f0f0;
	}

	.topic-h{
		color: #666666;
		text-align: center;
		margin: 0;
	}

	.description{
		display: flex;
		flex-flow: row wrap;
		align-items: center;
		justify-content: end;
		background: linear-gradient(140deg, #f0f0f0 56%, #fcfcfc);
		width: 100%;
		height: 22vh;
	}

	.description i{
		font-size: 1.3rem;
		position: relative;
		top: 26%;
		left: 22%;
	}

	.description-h{
		width: 39%;
		overflow: hidden;
		font-size: clamp(1.3rem, 2vw, 2rem);
	}

	#description-fig{
		width: 28.5%;
		height: max-content;
		margin: 0;
		margin-top: auto;
		overflow: hidden;
	}

	#description-fig img{
		width: 146%;
	}

	.mission, .vision{
		width: 49%;
		height: 20vh;
		margin-right: 1px;
		background: linear-gradient(180deg, #f0f0f0 56%, #fcfcfc);
	}

	.mission i, .vision i{
		position: relative;
		top: 24%;
		font-size: 0.9rem;
	}

	.story i{
		font-size: 0.9rem;
		position: relative;
		top: 10%;
	}

	#mission-h, #vision-h{
		margin-top: auto;
	}

	#mission-fig{
		width: 87%;
		margin: 0;
		height: 36.6%;
		overflow: hidden;
		margin-right: auto;
	}

	#mission-fig img{
		width: 100%;
	}

	#vision-fig{
		width: 100%;
		margin: 0;
		height: 36.6%;
		overflow: hidden;
	}

	#vision-fig img{
		width: 100%;
	}

	.story{
		width: 100%;
		height: 12vh;
	}


/*topic clicked*/

	.topicInfo-box{
		display: none;
	}


	.topicInfo-box h3{
		text-align: center;
		color: #666666
	}

	.topicInfo-box p{
		padding: 0 8%;
		text-align: center;
		line-height: 120%;
		color: #666666
	}

	.descriptionInfo-box{
		width: 100%;
		background-color: #f0f0f0;
	}

	.showTopicH{
		animation-name: showInfoH3;
		animation-duration: 0.9s;
	}

	.showTopicP{
		animation-name: showInfoP;
		animation-duration: 0.9s;	
	}

	.descriptionInfo-box h3{
		font-size: 1.2rem;
	}

	.descriptionInfo-txt{
		font-size: 0.9rem;
		text-align: center;
	}

	.missionInfo-box h3, .visionInfo-box h3{
		font-size: 1rem;
		margin: 5% 0;
	}

	.missionInfo-txt, .visionInfo-txt{
		font-size: 0.7rem;
	}

	.storyInfo-box h3{
		font-size: 0.95rem;
		margin: 2% 0;
	}

	.storyInfo-txt{
		font-size: 0.65rem;
	}

@keyframes showInfoH3{
	from{margin-top: 18%;
			color: transparent;}
	to{}
}

@keyframes showInfoP{
	from{color: transparent;}
	to{}
}

	/*laptop up*/
	@media (min-width: 1024px) and (orientation: landscape) {

		.slogan-box{
			height: 33vh;
		}

		.slogan-box::before{
			height: 33vh;
			top: 108px;
		}

		.topic i{
			display: none;
		}
	}
</style>

<script type="text/javascript">
	const description = document.querySelector(".description"),
	 descriptionH = document.querySelector(".description-h"),
	 descripEye = document.querySelector(".description i"),
	 descripFig = document.querySelector(".description figure"),
	 descriptionInfo = document.querySelector(".descriptionInfo-box"),
	 descriptionInfoH = document.querySelector(".descriptionInfo-box h3"),
	 descriptionInfoP = document.querySelector(".descriptionInfo-txt");
	
	
	description.addEventListener("touchstart", openDescrip);

	let descripIsOpen = false;

	function openDescrip(){
		if(!descripIsOpen){
			descriptionH.style.display = "none";
			descripEye.style.display = "none";
			descripFig.style.display = "none";
			descriptionInfo.style.display = "block";
			descriptionInfoH.classList.add("showTopicH");
			descriptionInfoP.classList.add("showTopicP");

			descripIsOpen = !descripIsOpen;
		} else {
			descriptionH.style.display = "inherit";
			descripEye.style.display = "inherit";
			descripFig.style.display = "inherit";
			descriptionInfoH.classList.remove("showTopicH");
			descriptionInfoP.classList.remove("showTopicP");
			descripIsOpen = !descripIsOpen;
		}
	}

</script>
