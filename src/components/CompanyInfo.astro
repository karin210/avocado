	}

	#desciption-fig{
		width: 30%;
		height: 100%;
		margin: 0;
		overflow: hidden;
	}

	#desciption-fig img{
		width: 146%;
	}

	.mission, .vision{
		width: 49%;
		height: 20vh;
		margin-right: 1px;
		background: linear-gradient(180deg, #f0f0f0 56%, #fcfcfc);
	}

	#mission-h, #vision-h{
