---
import MyLayout from "../layouts/MyLayout.astro"
import Header from "../components/Header.astro"
import PageH from "../components/PageH.astro"
import CompanyInfo from "../components/CompanyInfo.astro"
import WePics from "../components/WePics.astro"
import Certifieds from "../components/Certifieds.astro"
import Footer from "../components/Footer.astro"

---

<MyLayout>
	<Header />
	<section id="nosotros-box">
		<PageH 
			pageName= "Nosotros"/>
		<article class="slogan-box">
			<i class="fa-solid fa-quote-left"></i>
			<span class="slogan-txt">Creando sonrisas verdes</span>
			<i class="fa-solid fa-quote-right"></i>
			</article>
		<CompanyInfo />
		<WePics />
	</section>
	<Certifieds />
<Footer />
</MyLayout>


<style type="text/css">

	.slogan-box{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 25vh;
	}

	.slogan-box i{
		font-size: 2rem;
		color: rgba(143, 241, 101, 50%);
	}

	.fa-quote-left{
		align-self: start;
		margin-left: 2%;
	}

	.fa-quote-right{
		align-self: end;
		margin-right:2%;
	}

	.slogan-txt{
/*		font-family: comfortaa;*/
		font-weight: 400;
		font-size: 1.7rem;
		color: #FCFCFC;
		text-align: center;

	}

	.slogan-box::before{
		content: "";
		background-image: url("https://images.unsplash.com/photo-1609197607869-a7d2cebb7a32?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80");
		background-repeat: no-repeat;
		background-position: start;
		background-size: contain;
		background-attachment: fixed;
		height: 25vh;
		width: 100%;
		position: absolute;
		left: 0;
		top: 80px;
		z-index: -1;
	}



</style>
