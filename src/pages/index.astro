<style type="text/css">

	main {

	}

	#home-main-content {
		display: flex;
		flex-flow: column;
		height: auto;
		gap: 70px;
		align-items: center;
	}

	.headTxt-box{
		filter: brightness(0.93);
		height: 92vh;
		width: 100%;
/*		display: flex;*/
		align-items: center;
		background-image: url(https://www.mixt.com/wp-content/uploads/2020/07/Stocksy_txp33c5c38aAom100_Medium_1735653.jpg);
		background-size: cover;
		background-repeat: no-repeat;
		background-position: center;
		animation-name: newBack;
		animation-duration: 2.7s;
	}


	.headTxt{
		position: absolute;
	  top: 0;
	  bottom: 0;
	  left: 0;
	  margin: auto 0;
	  font-size: clamp(3rem, 3.5vw, 3.5rem);
		font-weight: bold;
		color: rgba(250, 250, 250, 100%);
		margin-left: 3%;
		width: 50%;
		max-width: 290px;
		height: 30%;
	}


	@keyframes newBack {
		from {filter: brightness(0);}
		to {filter: brightness(0.93)}
	}


/*landscape mode*/
	@media (600px <= width <= 950px) {

		.headTxt{
			width: 100%;
			max-width: 100%;
			margin: 0;
			text-align: center;
		}
		
	}
	
</style>
